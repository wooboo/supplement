{
  "plugin": [
    "oh-my-opencode",
    "opencode-antigravity-auth",
    "opencode-openai-codex-auth",
    "opencode-antigravity-quota"
  ],
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "google": {
      "name": "Google",
      "models": {
        "antigravity-gemini-3-pro-high": {
          "name": "Gemini 3 Pro High (Antigravity)",
          "thinking": true,
          "attachment": true,
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "antigravity-gemini-3-pro-low": {
          "name": "Gemini 3 Pro Low (Antigravity)",
          "thinking": true,
          "attachment": true,
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "attachment": true,
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        }
      }
    },
    "openai": {
      "name": "OpenAI",
      "api": "codex",
      "models": {
        "gpt-5.2": { "name": "GPT-5.2" },
        "o3": { "name": "o3", "thinking": true },
        "o4-mini": { "name": "o4-mini", "thinking": true }
      }
    }
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    },
    "gitea": {
      "type": "local",
      "command": [
        "docker", "run", "-i", "--rm",
        "-e", "GITEA_ACCESS_TOKEN",
        "-e", "GITEA_HOST",
        "docker.gitea.com/gitea-mcp-server"
      ],
      "environment": {
        "GITEA_HOST": "REPLACE_WITH_YOUR_GITEA_HOST",
        "GITEA_ACCESS_TOKEN": "REPLACE_WITH_YOUR_GITEA_TOKEN"
      }
    },
    "websearch_exa": {
      "type": "local",
      "command": ["npx", "-y", "exa-mcp-server"],
      "timeout": 60000,
      "environment": {
        "EXA_API_KEY": "REPLACE_WITH_YOUR_EXA_API_KEY"
      }
    }
  }
}
